<!-- Book Details Showing -->
<div class="container">
  <div class="flex-column set-center">
    <h1 class="text-center">Book Details</h1>
    <!--Error Message-->
    <% if flash[:errors] %>
      <% flash.each do |name,message| %>
        <p class="text-danger"><%= message%></p>
      <% end %>
    <% end %>
    <div class="d-flex flex-column align-items-center">
      <div class="card text-center" style="width: 24rem;">
        <div class="card-body">
          <h4 class="card-title"><%= @book.name %> </h4>
          <hr>
          <p class="card-text"> <strong>Author : </strong> <%= @book.author %> </p>
          <p class="card-text"> <strong>Price : </strong> <%= @book.price %> </p>
        </div>
      </div>
      <div class="d-flex">
        <%= button_to "Edit Book" , edit_book_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
        <%= button_to "Delete Book", book_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
        <%= button_to "View all Book", books_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
      </div>
    </div>
    <div class="d-flex">
      <div class="card text-center me-3">
        <div class="card-body">
          <%= image_tag @book.cover_page if @book.cover_page.attached? %>
        </div>
      </div>
    </div>
    <hr>
    <h3>Files</h3>
    <hr>
    <div class="d-flex">
      <div class="card text-center me-3">
        <div class="card-body">
          <% @book.files.each do |img| %>
            <%= image_tag img%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
